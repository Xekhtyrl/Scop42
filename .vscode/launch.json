{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Makefile Project",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/testGL",       // <-- path to your built executable
			"args": ["Resources/IronMan/IronMan.obj"],                                   // command-line arguments if needed
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",                  // working directory when debugging
			"environment": [],
			"externalConsole": true,                      // use external terminal for I/O
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "build"                      // runs "make" before launching
        }
	]
}